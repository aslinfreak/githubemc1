if (comp == 48 && CountryId == 17) {
    populateTransportFilterDropdown();

    if (RoleId == 17) {
        $('#upload').hide();
        $('#download').hide();
        $('#divFAQ').hide();
    } else {
        $('#upload').show();
        $('#download').show();
        $('#divFAQ').show();
    }
} else {
    // For all other components, ensure they are visible (optional safety)
    $('#upload').show();
    $('#download').show();
    $('#divFAQ').show();
}
