public string UpdateBatchJobDetails(BatchJobData batchJobDetails)
{
    string statusMsg = string.Empty;
    using (SqlConnection connectionString = new SqlConnection(ConfigurationManager.ConnectionStrings["MYPConnectionString"].ConnectionString))
    {
        try
        {
            connectionString.OpenWithMSI();

            SqlCommand processCmd = new SqlCommand("[ADMIN].[usp_UpdateBatchJobDetails]", connectionString);
            processCmd.CommandTimeout = 0;
            processCmd.CommandType = CommandType.StoredProcedure;
            processCmd.Parameters.AddWithValue("@JobId", batchJobDetails.JobId);
            processCmd.Parameters.AddWithValue("@IsActive", batchJobDetails.IsActive);
            processCmd.Parameters.AddWithValue("@IsOneTime", batchJobDetails.IsOneTime);
            processCmd.Parameters.AddWithValue("@StartTime", batchJobDetails.StartTime);
            processCmd.Parameters.AddWithValue("@EndTime", batchJobDetails.EndTime);
            processCmd.Parameters.AddWithValue("@ModifiedBy", batchJobDetails.ModifiedBy);
            statusMsg = Convert.ToString(processCmd.ExecuteScalar());
            return statusMsg;
        }
        catch (SystemException ex)
        {
            throw new SystemException("UpdateBatchJobDetails", ex);
        }
        finally
        {
            if (connectionString.State != ConnectionState.Closed)
            {
                connectionString.Dispose();
            }
        }
    }
}
